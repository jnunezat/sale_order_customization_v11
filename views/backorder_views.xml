<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_backorder_tree" model="ir.ui.view">
        <field name="name">sale.order.backorder.tree</field>
        <field name="model">sale.order.backorder</field>
        <field name="arch" type="xml">
            <tree string="Pedidos pendientes" create="0">
                <field name="name"/>
                <field name="sale_order_origin_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="amount_total"/>
                <field name="currency_id"/>
                <field name="company_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_backorder_form" model="ir.ui.view">
        <field name="name">sale.order.backorder.form</field>
        <field name="model">sale.order.backorder</field>
        <field name="arch" type="xml">
            <form string="Backorder" create="0" class="o_sale_order">
                <header>                    
                    <button name="action_cancel_backorder" string="Cancelar" type="object" states="draft"/>
                    <button name="action_confirm_backorder" string="Confirmar" type="object" class="btn-primary" states="draft"/>
                    <field readonly="1" name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sale_order_origin_id" readonly="1"/>
                            <field name="partner_id" context="{'search_default_customer':1, 'show_address': 1}"/>
                            <field name="partner_invoice_id"/>
                            <field name="partner_shipping_id"/>
                            <field name="transport_company_id"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="pricelist_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_term_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                            <field name="sale_order_generada_ids" widget="many2many_tags" attrs="{'invisible': [('sale_order_generada_ids', '=', False)]}" />                           
                        </group>
                    </group>
                    <notebook>
                        <page string="Líneas de Pedido">
                            <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" context="{&quot;default_backorder_id&quot;: id}">
                                <tree editable="bottom" create="0">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty" readonly="1"/>
                                    <field name="product_uom_dispon"/>
                                    <field name="date_prev"/>
                                    <field name="product_qty_prev"/>
                                    <field name="virtual_available" string="Stock previsto"/>
                                    <field name="product_qty_confirmed"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                            <div class="oe_right">
                                <group>
                                    <field name="amount_total"/>
                                </group>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_back_order_filter" model="ir.ui.view">
        <field name="name">sale.order.backorder.list.select</field>
        <field name="model">sale.order.backorder</field>
        <field name="arch" type="xml">
            <search string="Search Back Order">
                <field name="name" string="Backorder" filter_domain="['|',('name','ilike',self),('partner_id.name','ilike',self)]"/>
                <field name="partner_id" operator="child_of"/>
                <field name="create_uid" string="Vendedor"/>
                <field name="state"/>
                <filter string="Mis Órdenes" domain="[('create_uid','=',uid)]" name="my_sale_orders_filter"/>
                <filter string="En Borrador" domain="[('state','=','draft')]" name="draft_orders_filter"/>
                <filter string="Confirmadas" domain="[('state','=','confirmed')]" name="confirmed_orders_filter"/>
                <filter string="Canceladas" domain="[('state','=','cancel')]" name="cancel_orders_filter"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Vendedor" domain="[]" context="{'group_by':'create_uid'}"/>
                    <filter string="Mes de la orden" domain="[]" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_backorders" model="ir.actions.act_window">
        <field name="name">Backorders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.backorder</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[('create_uid', '=', uid)]</field> -->
        <field name="help" type="html">
            <p>
                No se han generado pedidos pendientes.
            </p>
        </field>
    </record>
    <menuitem id="menu_sale_backorder"
            name="Backorders"
            action="action_backorders"
            parent="sale.sale_order_menu"
            sequence="2" groups="sales_team.group_sale_salesman"/>
</odoo>
